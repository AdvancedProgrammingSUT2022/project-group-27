<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="viewControllers.GraphicOfGame"
            prefHeight="720.0" prefWidth="1280.0">

    <top>
        <HBox fx:id="statusBar" spacing="10">
            <Label fx:id="science"/>
            <Label fx:id="gold"/>
            <Label fx:id="happiness"/>
            <Label fx:id="player"/>
            <Label fx:id="turn"/>
        </HBox>
    </top>
    <bottom>
        <HBox spacing="10">
            <Button fx:id="nextTurn" text="next turn" onMouseClicked="#nextTurn"/>
            <Button fx:id="setting" text="setting" onMouseClicked="#setting"/>
        </HBox>
    </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="viewControllers.GameView"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="10" maxWidth="300">
            <TextField fx:id="arrayOfEnemies" alignment="CENTER" text="enter your enemies username and ',' between them" onKeyPressed="#textFieldEditor"/>
            <Button alignment="CENTER" text="start game" onMouseClicked="#startGame"/>
        </VBox>
    </center>
</BorderPane>

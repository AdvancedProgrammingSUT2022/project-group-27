<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="viewControllers.TradePanel"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="5">
            <ComboBox fx:id="comboBox" prefWidth="200" promptText="user"/>
            <HBox alignment="CENTER" spacing="5">
                <ComboBox fx:id="sendingObject" prefWidth="200" promptText="sending object"/>
                <TextField fx:id="sendingNumber" promptText="sending number" prefWidth="50"/>
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <ComboBox fx:id="receivingObject" prefWidth="200" promptText="receiving object"/>
                <TextField fx:id="receivingNumber" promptText="receiving number" prefWidth="50"/>
            </HBox>
            <Button fx:id="submit" text="submit" alignment="CENTER" onMouseClicked="#submit"/>
        </VBox>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="viewControllers.ChatRoomView"
            prefHeight="1000.0" prefWidth="800.0">
    <Button fx:id="back" text="back" layoutY="20" layoutX="20" onMouseClicked="#back"/>
    <Button fx:id="newChatRoom" text=" create new chatRoom" layoutY="20" layoutX="80" onMouseClicked="#addingChatRoom"/>
    <HBox layoutY="60" layoutX="20" spacing="30">
        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="600" prefHeight="600" vbarPolicy="ALWAYS">
            <VBox fx:id="rooms" prefWidth="250" spacing="10"/>
        </ScrollPane>
        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="600" prefHeight="600">
            <VBox fx:id="chat" prefWidth="480" spacing="10"/>
        </ScrollPane>
    </HBox>
</AnchorPane>

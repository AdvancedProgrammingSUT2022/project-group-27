<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="viewControllers.ConquerCityPanel"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="5">
            <Label text="What do you want to do with this city: "/>
            <Button fx:id="destroyCity" text="destroy city" onMouseClicked="#destroy"/>
            <Button fx:id="puppetCity" text="puppet city" onMouseClicked="#puppet"/>
            <Button fx:id="getCity" text="get the city" onMouseClicked="#get"/>
        </VBox>
    </center>
</BorderPane>

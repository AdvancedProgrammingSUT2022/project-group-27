<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="viewControllers.MainMenuView"
            prefHeight="1000.0" prefWidth="800.0">

    <VBox alignment="CENTER" spacing="10" layoutX="450" layoutY="60">
        <Rectangle fx:id="profileImage"/>
        <Label fx:id="username"/>
        <Label fx:id="text" text="where do you want to go?"/>
        <Button fx:id="logOut" text="log out" alignment="CENTER" prefWidth="100" onMouseClicked="#logOut"/>
        <Button fx:id="profile" text="profile menu" alignment="CENTER" prefWidth="100" onMouseClicked="#profileMenu"/>
        <Button fx:id="game" text="game menu" alignment="CENTER" prefWidth="100" onMouseClicked="#gameMenu"/>
        <Button fx:id="scoreBoard" text="score board" alignment="CENTER" prefWidth="100" onMouseClicked="#scoreBoardMenu"/>
        <Button fx:id="chat" text="chat room" alignment="CENTER" prefWidth="100" onMouseClicked="#chatRoomMenu"/>
        <Button fx:id="invitation" text="invitation" alignment="CENTER" prefWidth="100" onMouseClicked="#invitationMenu"/>
    </VBox>

</AnchorPane>

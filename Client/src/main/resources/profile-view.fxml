<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<AnchorPane fx:id="pane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="viewControllers.ProfileView"
            prefHeight="1000.0" prefWidth="800.0">

    <Button fx:id="back" text="back" layoutY="20" layoutX="20" onMouseClicked="#back"/>
    <VBox alignment="CENTER" spacing="10" layoutY="200" layoutX="220">
        <Rectangle fx:id="profileImage"/>
        <Label fx:id="username"/>
        <HBox>
            <Button fx:id="password" text="change password" onMouseClicked="#changePasswordButton"/>
            <Button fx:id="nickname" text="change nickname" onMouseClicked="#changeNicknameButton"/>
            <Button fx:id="profile" text="change profile image" onMouseClicked="#changeImageButton"/>
            <Button fx:id="friends" text="friendship panel" onMouseClicked="#friendship"/>
        </HBox>
    </VBox>
    <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" maxHeight="600" prefHeight="600" layoutX="360" layoutY="340" style="-fx-background-color: transparent">
        <VBox fx:id="box" alignment="TOP_CENTER" spacing="10">
            <Button fx:id="submit" text="submit" onMouseClicked="#submitChanges"/>
        </VBox>
    </ScrollPane>
</AnchorPane>
